{
  "name": "kitchen-sink-app",
  "version": "0.0.1",
  "description": "A full stack project built with Python, Flask, and Create-React-App.",
  "main": "./server/main.py",
  "scripts": {
    "dev:start:server": "pipenv run flask run --no-debugger",
    "dev:start:client": "cd client && yarn start",
    "dev:start": "concurrently \"yarn run dev:start:server\" \"yarn run dev:start:client\"",
    "install": "concurrently \"cd client && yarn\" \"pipenv install\"",
    "start": "if-env NODE_ENV=production && npm run start:prod || npm run dev:start",
    "build": "cd client && npm run build && mv build ../server/src"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:ocskier/kitchen-sink.git"
  },
  "engines": {
    "node": ">=12.12.0",
    "yarn": ">=1.19.0"
  },
  "keywords": [
    "Python",
    "React",
    "Flask"
  ],
  "author": "Jon Jackson <ocskier@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/ocskier/kitchen-sink/issues"
  },
  "homepage": "https://github.com/ocskier/kitchen-sink#README",
  "devDependencies": {
    "concurrently": "^5.3.0"
  },
  "dependencies": {
    "if-env": "^1.0.4"
  }
}
